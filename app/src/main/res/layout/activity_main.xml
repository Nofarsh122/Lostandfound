<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#F1E7DB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="262dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:contentDescription="לוגו אבידות ומציאות"
            android:src="@drawable/logo_lost_found" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ברוכים הבאים לאפליקציית
                   אבידות ומציאות"
            android:textSize="25dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnRegHome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#6D4C41"
            android:text="הרשמה" />

        <Button
            android:id="@+id/btnLogHome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#6D4C41"
            android:text="התחברות"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#6D4C41"
            android:text="אודות"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>