<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.UserProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="10"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="פרטי המשתמש"
            android:textColor="#333"
            android:textSize="24sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etUserFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint=" שם פרטי"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etUserLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint=" שם משפחה"
            android:padding="10dp"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/etUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint=" מס' טלפון"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="אימייל"
            android:padding="10dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="סיסמא"
            android:padding="10dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:backgroundTint="#264660"
            android:gravity="center"
            android:text="עדכן פרופיל"
            android:textSize="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>